<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F2F2"
    tools:context=".Activities.ui.clientes.ListarClienteActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="89dp"
        android:fontFamily="sans-serif-black"
        android:text="Lista de Clientes"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tabla"
        android:layout_width="396dp"
        android:layout_height="194dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="7dp"
        android:background="#05BA8C30"
        android:stretchColumns="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#12D8F1"
            android:textAlignment="center"
            android:visibility="visible">

            <TextView
                android:id="@+id/textview_codigo"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:background="#c0efd2"
                android:text="Cedula"
                android:textAlignment="center"
                android:textColor="#0C0C0C" />

            <TextView
                android:id="@+id/text_view_nombre"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:background="#c0efd2"
                android:text="Nombre"
                android:textAlignment="center"
                android:textColor="#131313" />

            <TextView
                android:id="@+id/text_view_telefono"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:background="#c0efd2"
                android:text="Telefono"
                android:textAlignment="center"
                android:textColor="#171616" />

            <TextView
                android:id="@+id/text_view_telefono7"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:background="#c0efd2"
                android:text="Direccion"
                android:textAlignment="center"
                android:textColor="#171616" />
        </TableRow>


    </TableLayout>





    <Button
        android:id="@+id/btn_regresarTablaAuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"

        android:text="Regresar"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabla"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>