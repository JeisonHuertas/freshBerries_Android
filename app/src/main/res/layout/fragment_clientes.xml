<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondofru"
    tools:context=".Activities.ui.clientes.ClientesFragment">


    <View
        android:id="@+id/view4"
        android:layout_width="413dp"
        android:layout_height="390dp"
        android:background="#FFFDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <Button
        android:id="@+id/btnRegistrarCliente"
        android:layout_width="219dp"
        android:layout_height="48dp"
        android:layout_marginTop="468dp"
        android:background="@drawable/colorboton"
        app:backgroundTint="@null"
        android:text="Registrar cliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView

        android:id="@+id/lottieAnimationView"
        android:layout_width="197dp"
        android:layout_height="193dp"
        android:layout_marginTop="92dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/cliente" />

    <EditText
        android:id="@+id/txtIdCliente"
        android:layout_width="201dp"
        android:layout_height="48dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edittext"
        android:ems="10"

        android:hint="ID"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:textColor="#FBF9F9"
        android:textColorHint="#ccc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toEndOf="@+id/lottieAnimationView"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/btnBuscarCliente"
        android:layout_width="215dp"
        android:layout_height="48dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/colorboton"
        app:backgroundTint="@null"
        android:text="Buscar cliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnListarCliente"
        android:layout_width="220dp"
        android:layout_height="47dp"
        android:background="@drawable/colorboton"
        app:backgroundTint="@null"
        android:layout_marginTop="540dp"
        android:text="Listar cliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="413dp"
        android:layout_height="0dp"
        android:layout_marginTop="22dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/arc_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="174dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="179dp"
        android:fontFamily="@font/aclonica"
        android:text="Clientes"
        android:textColor="#FDFAFA"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>