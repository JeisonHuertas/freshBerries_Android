<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listRecycleViewProductos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo2"
    tools:context=".Activities.ui.usuario.RegistrarUsuarioActivity">

    <EditText
        android:id="@+id/txtIdB"
        android:layout_width="226dp"
        android:layout_height="47dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="101dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:hint="ID"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:textColor="#FAF7F7"
        android:textColorHint="#ccc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtNombreUser"
        android:layout_width="226dp"
        android:layout_height="47dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColor="#F8F3F3"
        android:textColorHint="#ccc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIdB" />

    <RadioGroup
        android:id="@+id/radioGroupSeleccion"
        android:layout_width="213dp"
        android:layout_height="97dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="102dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtConstrasena">

        <RadioButton
            android:id="@+id/radioBtnAdmin"
            android:layout_width="226dp"
            android:layout_height="47dp"
            android:background="@drawable/edittext"
            android:paddingLeft="20dp"
            android:text="Administrador"
            android:textColor="#FDFBFB"
            android:textColorHint="#ccc" />

        <RadioButton
            android:id="@+id/radioBtnUsuario"
            android:layout_width="226dp"
            android:layout_height="47dp"
            android:background="@drawable/edittext"
            android:paddingLeft="20dp"
            android:text="Empleado"
            android:textColor="#FBF7F7"
            android:textColorHint="#ccc" />
    </RadioGroup>

    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="226dp"
        android:layout_height="47dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="101dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:textColor="#FDF9F9"
        android:textColorHint="#ccc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreUser" />

    <EditText
        android:id="@+id/txtConstrasena"
        android:layout_width="226dp"
        android:layout_height="47dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="101dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColor="#F6F4F4"
        android:textColorHint="#ccc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUsuario" />

    <Button
        android:id="@+id/btnActualizarUser"
        android:layout_width="176dp"
        android:layout_height="48dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="160dp"
        android:background="@drawable/colorboton"
        android:text="Registrar Usuario"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupSeleccion" />

</androidx.constraintlayout.widget.ConstraintLayout>